<?xml version="1.0" encoding="ISO-8859-1" ?>
<project name="ontopia.ivy" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">
  <target name="clean.ivy">
    <ivy:settings id="ivy.instance" file="${basedir}/ivysettings.xml" />
    <ivy:cleancache />
    <ivy:resolve file="ivy.xml" />
    <ivy:retrieve organisation="net.ontopia" module="ontopia-engine" conf="build" sync="true" />
  </target>
  <target name="resolve.ivy">
    <ivy:settings id="ivy.instance" file="${basedir}/ivysettings.xml" />
    <ivy:resolve file="ivy.xml" />
    <ivy:retrieve organisation="net.ontopia" module="ontopia-engine" conf="build" sync="true" />
  </target>
  <target name="report.ivy">
    <ivy:settings id="ivy.instance" file="${basedir}/ivysettings.xml" />
    <ivy:report organisation="net.ontopia" module="ontopia-engine" conf="build" todir="build/ivy" />
  </target>
</project>
