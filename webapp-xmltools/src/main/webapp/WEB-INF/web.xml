<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0"
      metadata-complete="true">

  <display-name>Free XML Tools</display-name>
  <description>
    A web site about free XML tools.
  </description>

  <context-param>
    <param-name>app_config</param-name>
    <param-value>../omnigator/WEB-INF/config/application.xml</param-value>
    <description>
      Tells the web application where to find the
      application configuration file.
    </description>
  </context-param>

  <session-config>
    <session-timeout>30</session-timeout>    
  </session-config>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
